<%- include('../partials/header') %>

<h1>Enter Marks</h1>
<div class="card mb-4">
    <div class="card-body">
        <p class="card-text mb-1"><strong>Subject:</strong> <%= subject.name %></p>
        <p class="card-text"><strong>Exam:</strong> <%= examType %> (Total Marks: <%= totalMarks %>)</p>
    </div>
</div>

<form action="/marks/save" method="POST">
    <input type="hidden" name="subjectId" value="<%= subject._id %>">
    <input type="hidden" name="examType" value="<%= examType %>">
    <input type="hidden" name="totalMarks" value="<%= totalMarks %>">

    <div class="table-responsive">
        <table class="table table-striped">
            <thead class="table-light">
                <tr>
                    <th>Roll Number</th>
                    <th>Student Name</th>
                    <th>Marks Obtained</th>
                </tr>
            </thead>
            <tbody>
                <% students.forEach(student => { %>
                    <tr>
                        <td><%= student.rollNumber %></td>
                        <td><%= student.name %></td>
                        <td>
                            <input type="number" class="form-control" name="marks[<%= student._id %>]" placeholder="Enter marks" required>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save Marks</button>
    </div>
</form>

<%- include('../partials/footer') %>