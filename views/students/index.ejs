<%- include('../partials/header') %>

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>Student List 🧑‍🎓</h1>
    <a href="/students/new" class="btn btn-primary">Add New Student</a>
</div>

<% if (students.length > 0) { %>
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-light">
                <tr>
                    <th>Name</th>
                    <th>Roll Number</th>
                    <th>Semester</th>
                    <th>Department</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% students.forEach(student => { %>
                    <tr>
                        <td><%= student.name %></td>
                        <td><%= student.rollNumber %></td>
                        <td><%= student.semester %></td>
                        <td><%= student.department %></td>
                        <td>
                            <a href="/students/edit/<%= student._id %>" class="btn btn-warning btn-sm">Update</a>
                            <form action="/students/delete/<%= student._id %>" method="POST" class="d-inline">
                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                            </form>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
<% } else { %>
    <p>No students found in the database. Please add one!</p>
<% } %>

<%- include('../partials/footer') %>