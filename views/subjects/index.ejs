<%- include('../partials/header') %>

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>Subject List ðŸ“š</h1>
    <a href="/subjects/new" class="btn btn-primary">Add New Subject</a>
</div>

<% if (subjects.length > 0) { %>
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-light">
                <tr>
                    <th>Subject Name</th>
                    <th>Subject Code</th>
                    <th>Semester</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% subjects.forEach(subject => { %>
                    <tr>
                        <td><%= subject.name %></td>
                        <td><%= subject.code %></td>
                        <td><%= subject.semester %></td>
                        <td>
                            <a href="/subjects/edit/<%= subject._id %>" class="btn btn-warning btn-sm">Update</a>
                            <form action="/subjects/delete/<%= subject._id %>" method="POST" class="d-inline">
                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                            </form>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
<% } else { %>
    <div class="alert alert-info">No subjects found. Please add one.</div>
<% } %>

<%- include('../partials/footer') %>